---
import { getCollection } from 'astro:content';

// Get 4 latest journeys
const allJourneys = await getCollection('hanh-trinh');
const latestJourneys = allJourneys
  .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime())
  .slice(0, 4);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat('vi-VN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  }).format(date);
};
---

<section class="py-16 bg-gradient-to-br from-secondary/5 to-primary/5">
  <div class="container mx-auto px-4 sm:px-6">
    {/* Section Header */}
    <div class="text-center mb-12">
      <h2 class="text-3xl sm:text-4xl font-bold text-foreground mb-4">
        Hành Trình Gần Đây
      </h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Những chuyến đi ý nghĩa, lan tỏa yêu thương đến mọi miền
      </p>
    </div>

    {/* Journey Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      {latestJourneys.map((journey) => (
        <article class="bg-card rounded-lg overflow-hidden border border-border hover:border-secondary/50 transition-all duration-300 shadow-sm hover:shadow-lg group">
          <a href={`/HanhTrinh/${journey.id}`} class="block">
            {/* Image */}
            {journey.data.image ? (
              <div class="relative h-48 overflow-hidden">
                <img
                  src={journey.data.image}
                  alt={journey.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
                {/* Overlay badge */}
                <div class="absolute top-3 right-3 bg-secondary text-secondary-foreground px-3 py-1 rounded-full text-xs font-semibold">
                  Hành Trình
                </div>
              </div>
            ) : (
              <div class="h-48 bg-gradient-to-br from-secondary/20 to-primary/20"></div>
            )}

            {/* Content */}
            <div class="p-5">
              <time class="text-xs text-muted-foreground flex items-center gap-1 mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                {formatDate(journey.data.pubDate)}
              </time>

              <h3 class="text-lg font-bold text-foreground mb-2 line-clamp-2 group-hover:text-secondary transition-colors">
                {journey.data.title}
              </h3>

              <p class="text-sm text-muted-foreground line-clamp-3">
                {journey.data.description}
              </p>

              {/* Tags */}
              {journey.data.tags && journey.data.tags.length > 0 && (
                <div class="flex flex-wrap gap-1 mt-3">
                  {journey.data.tags.slice(0, 2).map((tag) => (
                    <span class="text-xs px-2 py-0.5 bg-secondary/10 text-secondary rounded-full">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
            </div>
          </a>
        </article>
      ))}
    </div>

    {/* View All Button */}
    <div class="text-center">
      <a 
        href="/HanhTrinh"
        class="inline-flex items-center gap-2 px-6 py-3 bg-secondary text-secondary-foreground rounded-lg font-semibold hover:bg-secondary/90 transition-all duration-300 shadow-md hover:shadow-lg"
      >
        <span>Xem Tất Cả Hành Trình</span>
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="m9 18 6-6-6-6"></path>
        </svg>
      </a>
    </div>
  </div>
</section>
