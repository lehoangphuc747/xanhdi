---
interface Props {
  prevPost?: { id: string; title: string } | null;
  nextPost?: { id: string; title: string } | null;
}

const { prevPost, nextPost } = Astro.props;
---

{(prevPost || nextPost) && (
  <nav class="flex items-center justify-between gap-4 mt-8 pt-6 border-t border-border">
    {prevPost ? (
      <a
        href={`/TinTuc/${prevPost.id}`}
        class="group flex-1 p-4 rounded-lg border border-border hover:border-secondary/50 transition-all bg-card"
      >
        <div class="flex items-center gap-2 text-xs text-muted-foreground mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m15 18-6-6 6-6"></path>
          </svg>
          <span>Tin cũ hơn</span>
        </div>
        <h3 class="font-semibold text-foreground group-hover:text-secondary transition-colors line-clamp-2">
          {prevPost.title}
        </h3>
      </a>
    ) : (
      <div class="flex-1"></div>
    )}

    {nextPost ? (
      <a
        href={`/TinTuc/${nextPost.id}`}
        class="group flex-1 p-4 rounded-lg border border-border hover:border-secondary/50 transition-all bg-card text-right"
      >
        <div class="flex items-center justify-end gap-2 text-xs text-muted-foreground mb-2">
          <span>Tin mới hơn</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="m9 18 6-6-6-6"></path>
          </svg>
        </div>
        <h3 class="font-semibold text-foreground group-hover:text-secondary transition-colors line-clamp-2">
          {nextPost.title}
        </h3>
      </a>
    ) : (
      <div class="flex-1"></div>
    )}
  </nav>
)}
